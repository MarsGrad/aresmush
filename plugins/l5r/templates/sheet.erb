%lh
<%= line_with_text t('l5r.sheet_title', :name => char.name) %>
<%= left( clan, 20) -%>
<%= center( ' ', 30) -%>
<%= right( family, 20) %>
<%= left( school, 40) -%>
<%= center ( ' ', 70) -%>
<%= right( insight, 20) %>
<% if shugenja == true %>
<%= left( affinity, 20) -%>
<%= center( ' ', 30) -%>
<%= right( deficiency, 20) %>
<% end %>

<%= line_with_text fire_air_ring_title%>
<%= left(fire_ring_traits, 20) -%>
<%= center(' ', 5) -%>
<%= right(air_ring_traits, 20) %>

<%= line_with_text earth_water_ring_title %>
<%= left(earth_ring_traits, 20) -%>
<%= center(' ', 8) -%>
<%= right(water_ring_traits, 20) %>

<%= line_with_text void_ring_title %>
<%= left(void_pool, 80) %>

<%= line_with_text t('l5r.skills_title') %>
<% skills.each do |s| %>
%xh<%= left("#{s.name}:", 20) %>%xn <%= s.rank %>      <%= emphases(s) %>
<% end %>

<%= line_with_text t('l5r.techniques_title') %>
<% techs.each do |t| %>
<%= t -%>
<% end %>

<% if shugenja == true %>
<%= line_with_text t('l5r.spells_title') %>
<% spells.each do |s| %>
<%= s %>
<% end %>
<% end %>
%lf
