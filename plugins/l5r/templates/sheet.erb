%lh
<% if char.l5r_sheet_type != nil %>
<%= line_with_text t('l5r.sheet_title_1', :name => char.name, :sheet_type => char.l5r_sheet_type.titlecase) %>
<% else %>
<%= line_with_text t('l5r.sheet_title_2', :name => char.name) %>
<% end %>
<% if char.l5r_sheet_type == "ronin" || char.l5r_sheet_type == "samurai" || char.l5r_sheet_type == nil %>
<%= left( clan, 20) -%>
<%= center( ' ', 30) -%>
<%= family %>
<%= left( school, 40) -%>
<%= center( ' ', 10) -%>
<%= insight %>
<% if shugenja == true %>
<%= left( affinity, 20) -%>
<%= center( ' ', 30) -%>
<%= deficiency %>
<% end %>
<% end %>
<% if char.l5r_sheet_type == "monk" %>
<%= left( order, 40) -%>
<%= center( ' ', 10) -%>
<%= insight %>
<% end %>
<% if char.l5r_sheet_type == "bonge" || char.l5r_sheet_type == "geisha" %>
<%= left( clan, 20) -%>
<%= center( ' ', 30) -%>
<%= insight %>
<% end %>
<%= line_with_text fire_air_ring_title%>
<%= left(fire_ring_traits, 20) -%>
<%= center(' ', 5) -%>
<%= right(air_ring_traits, 20) %>
<%= line_with_text earth_water_ring_title %>
<%= left(earth_ring_traits, 20) -%>
<%= center(' ', 8) -%>
<%= right(water_ring_traits, 20) %>
<%= line_with_text void_ring_title %>
<%= left(void_pool, 80) %>
<%= line_with_text t('l5r.skills_title') %>
<% skills.each do |s| %>
%xh<%= left("#{s.name}:", 25) %>%xn <%= s.rank %>      <%= emphases(s) %>
<% end %>
<% if char.l5r_sheet_type == "ronin" || char.l5r_sheet_type == "samurai" %>
<%= line_with_text t('l5r.techniques_title') %>
<% techs.each do |t| %>
%xh<%= left("#{t.name}:", 25) %>%xn <%= "#{t.rank}" %>      <%= t.school.titlecase %>
<% end %>
<% end %>
<% if shugenja == true %>
<%= line_with_text t('l5r.spells_title') %>
<% spells.each do |s| %>
<%= s -%>
<% end %>

<%= line_with_text t('l5r.spell_pools_title') %>
<%= left(fire_spell_pool, 40) -%> <%= air_spell_pool %>
<%= left(earth_spell_pool, 40) -%> <%= water_spell_pool %>
<%= left(void_spell_pool, 40) %>
<% end %>
<% if !char.l5r_kiho.to_a.empty? %>
<%= line_with_text t('l5r.kiho_title') %>
<% kiho.each do |k| %>
<%= k -%>
<% end %>

<% end %>
<% if !char.l5r_advantages.to_a.empty? %>
<%= line_with_text t('l5r.advantage_title') %>
<% advantages.each do |a| %>
<%= left(a[0], 35) -%>
<%= a[1] %>
<% end %>
<% end %>
<% if !char.l5r_disadvantages.to_a.empty? %>
<%= line_with_text t('l5r.disadvantage_title') %>
<% disadvantages.each do |d| %>
<%= left(d[0], 35) -%>
<%= d[1] %>
<% end %>
<% end %>
<% if !char.l5r_kata.to_a.empty? %>
<%= line_with_text t('l5r.kata_title') %>
<% kata.each do |k| %>
%xh<%= left("#{k.name}:", 25) %>%xn <%= "#{k.ring}/#{k.mastery}" %>
<% end %>
<% end %>
%lf
